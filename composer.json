{
    "name": "pulse/flags-bundle",
    "description": "Production-ready Symfony Bundle for feature flag management with percentage-based rollout, multiple activation strategies, and dual storage architecture",
    "type": "symfony-bundle",
    "keywords" : [
        "feature flag",
        "feature toggle",
        "symfony",
        "bundle",
        "ab testing",
        "percentage rollout",
        "feature management"
    ],
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Pulse\\FlagsBundle\\": "src/"
        }
    },
    "authors": [
        {
            "name": "squora",
            "email": "squortzov.nik@yandex.ru"
        }
    ],
    "require": {
        "php": "^8.1",
        "symfony/framework-bundle": "^7.3",
        "symfony/config": "^7.3",
        "symfony/console": "^7.3",
        "symfony/dependency-injection": "^7.3",
        "symfony/security-csrf": "^7.3|^8.0",
        "symfony/asset": "^7.3",
        "twig/twig": "^3.21",
        "ext-yaml": "*",
        "ext-pdo": "*",
        "symfony/yaml": "^7.3"
    },
    "require-dev": {
        "doctrine/orm": "^3.5",
        "phpunit/phpunit": "^12.4",
        "symfony/phpunit-bridge": "^7.3",
        "phpstan/phpstan": "*",
        "phpstan/phpstan-symfony": "*",
        "phpstan/extension-installer": "*",
        "friendsofphp/php-cs-fixer": "^3.91"
    },
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true,
            "symfony/flex": true
        }
    }
}
